name: MBTQ Polyglot CI/CD

on:
  push:
    branches: [ main, staging ]
  pull_request:
    branches: [ main, staging ]

jobs:
  go-services:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-go@v5
        with:
          go-version: 1.23
      - run: go build -v ./services/...
      - run: go test ./services/... -v -cover
      - uses: google-github-actions/deploy-cloudrun@v2
        if: github.ref == 'refs/heads/main'
        with:
          service: mbtq-go-core
          region: us-west1
          source: ./services

  node-services:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
      - run: npm ci
        working-directory: ./gateway
      - run: npm test
        working-directory: ./gateway
      - uses: google-github-actions/deploy-cloudrun@v2
        if: github.ref == 'refs/heads/main'
        with:
          service: mbtq-node-gateway
          region: us-west1
          source: ./gateway
